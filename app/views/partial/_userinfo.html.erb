<div class="col-xs-3">
  <h2>User info</h2>
  <div>
      <div>
        <%= attachment_image_tag user, :profile_image, size: "100x100", class: ".attachment user profile_image fallback", fallback: "no_image.jpg" %>
      </div>
      <div>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
  <div class="row">
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user.id) do %>
      <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
  <% else %>
    <%= link_to user_path(current_user.id) do %>
      <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
  <% end %>
  </div>

  <div>
    <h2>New book</h2>
    <div>
      <%= form_for book, url: {controller: "books", action: "create"}, class: 'new_book', id: 'new_book' do |f| %>
      <div class="field row">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, value: '', id: 'book_title', class: 'col-xs-12 book_title' %>
      </div>
      <div class="field row">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body, value: '', id: 'book_body', class: 'col-xs-12 book_body' %>
      </div>
      <div class="actions row">
        <%= f.submit "Create Book", class: 'btn btn-primary col-xs-12' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
